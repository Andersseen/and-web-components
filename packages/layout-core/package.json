{
  "name": "@andersseen/layout",
  "version": "0.0.1",
  "description": "Pure CSS layout and typography library driven by HTML attributes",
  "main": "dist/layout.css",
  "style": "dist/layout.css",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rm -rf dist && sass src/index.scss dist/layout.css && sass src/index.scss dist/layout.min.css --style compressed",
    "clean": "rm -rf dist",
    "watch": "sass --watch src/index.scss:dist/layout.css",
    "prepublishOnly": "pnpm run build"
  },
  "exports": {
    ".": "./dist/layout.css",
    "./dist/layout.css": "./dist/layout.css",
    "./dist/layout.min.css": "./dist/layout.min.css"
  },
  "keywords": [
    "css",
    "layout",
    "typography",
    "attribute-driven",
    "scss"
  ],
  "author": "Andersseen",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.71.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Andersseen/and-web-components.git",
    "directory": "packages/layout-core"
  }
}
