---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Andersseen — Web Component Ecosystem">
  <main class="w-full">

    <!-- ═══════════════════════════════════════════════════════
         NAVBAR — Sticky with scroll-to-section links
    ════════════════════════════════════════════════════════ -->
    <and-navbar class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div slot="brand" class="font-bold text-xl flex items-center gap-2">
        <and-icon name="layers" size="24"></and-icon>
        <span>Andersseen</span>
      </div>
      <nav slot="actions" class="hidden md:flex items-center gap-6">
        <a href="#hero" class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">Home</a>
        <a href="#features" class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">Features</a>
        <a href="#showcase" class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">Showcase</a>
        <a href="#ecosystem" class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">Ecosystem</a>
        <and-button size="sm" variant="outline">
          <and-icon name="github" size="16"></and-icon>
          GitHub
        </and-button>
      </nav>
    </and-navbar>

    <!-- ═══════════════════════════════════════════════════════
         SECTION 1 — HERO
    ════════════════════════════════════════════════════════ -->
    <section id="hero" class="relative overflow-hidden">
      <!-- Gradient background decoration -->
      <div class="absolute inset-0 -z-10">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-primary/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-[400px] h-[400px] bg-secondary/5 rounded-full blur-3xl"></div>
      </div>

      <div and-layout="vertical align:center gap:xl p-x:lg p-y:xxxl" class="max-w-[1200px] mx-auto min-h-[85vh] justify-center">
        <!-- Badge -->
        <div
          data-and-motion="fade-in"
          data-and-motion-trigger="enter"
          data-and-motion-duration="600ms"
        >
          <and-badge variant="secondary" class="text-sm">
            <and-icon name="zap" size="14"></and-icon>
            Framework Agnostic · Built with Stencil
          </and-badge>
        </div>

        <!-- Heading -->
        <h1
          and-text="h1 align:center weight:extrabold"
          class="max-w-[900px] tracking-tight"
          data-and-motion="slide-up"
          data-and-motion-trigger="enter"
          data-and-motion-duration="800ms"
          data-and-motion-delay="100ms"
        >
          Build Modern UIs with<br/>
          <span class="text-primary">Web Components</span>
        </h1>

        <!-- Subtitle -->
        <p
          and-text="p align:center"
          class="text-muted-foreground max-w-[600px] text-lg"
          data-and-motion="fade-in"
          data-and-motion-trigger="enter"
          data-and-motion-delay="300ms"
        >
          A complete ecosystem of design tokens, layout primitives, animations, icons,
          and 24+ accessible web components — ready for any framework.
        </p>

        <!-- CTA Buttons -->
        <div
          and-layout="horizontal align:center gap:md"
          data-and-motion="zoom-in"
          data-and-motion-trigger="enter"
          data-and-motion-delay="500ms"
        >
          <and-button size="lg">
            <and-icon name="play" size="18"></and-icon>
            Get Started
          </and-button>
          <and-button variant="outline" size="lg">
            <and-icon name="book-open" size="18"></and-icon>
            Documentation
          </and-button>
        </div>

        <!-- Tech Stats -->
        <div
          and-layout="horizontal gap:xxl align:center justify:center wrap:wrap"
          class="mt-8"
          data-and-motion="slide-up"
          data-and-motion-trigger="enter"
          data-and-motion-delay="700ms"
        >
          <div and-layout="vertical align:center gap:xxs">
            <span class="text-3xl font-bold text-primary">24+</span>
            <span and-text="p-sm" class="text-muted-foreground">Components</span>
          </div>
          <div class="w-px h-10 bg-border"></div>
          <div and-layout="vertical align:center gap:xxs">
            <span class="text-3xl font-bold text-primary">70+</span>
            <span and-text="p-sm" class="text-muted-foreground">Icons</span>
          </div>
          <div class="w-px h-10 bg-border"></div>
          <div and-layout="vertical align:center gap:xxs">
            <span class="text-3xl font-bold text-primary">10</span>
            <span and-text="p-sm" class="text-muted-foreground">Animations</span>
          </div>
          <div class="w-px h-10 bg-border"></div>
          <div and-layout="vertical align:center gap:xxs">
            <span class="text-3xl font-bold text-primary">0</span>
            <span and-text="p-sm" class="text-muted-foreground">Dependencies</span>
          </div>
        </div>

        <!-- Scroll indicator -->
        <div class="mt-12 animate-bounce" data-and-motion="fade-in" data-and-motion-trigger="enter" data-and-motion-delay="1000ms">
          <a href="#features" class="text-muted-foreground hover:text-foreground transition-colors">
            <and-icon name="chevron-down" size="28"></and-icon>
          </a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════
         SECTION 2 — FEATURES
    ════════════════════════════════════════════════════════ -->
    <section id="features" class="bg-muted/30 border-y">
      <div and-layout="vertical gap:xxl p-y:xxxl p-x:lg" class="max-w-[1200px] mx-auto">

        <!-- Section Header -->
        <div and-layout="vertical align:center gap:sm" data-and-motion="fade-in" data-and-motion-trigger="enter">
          <and-badge variant="outline">Features</and-badge>
          <h2 and-text="h2 align:center weight:bold" class="tracking-tight">
            Everything You Need
          </h2>
          <p and-text="p align:center" class="text-muted-foreground max-w-[600px]">
            From layout primitives to complex interactive components — our ecosystem covers the full spectrum of modern UI development.
          </p>
        </div>

        <!-- Features Grid - using and-layout grid -->
        <div and-layout="grid cols:1 cols@md:2 cols@lg:3 gap:lg">

          <!-- Feature Card 1 -->
          <and-card
            class="h-full"
            data-and-motion="slide-up"
            data-and-motion-trigger="enter"
            data-and-motion-delay="0ms"
          >
            <div and-layout="vertical gap:sm p:lg">
              <div class="h-12 w-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <and-icon name="box" size="24"></and-icon>
              </div>
              <h3 and-text="h5 weight:bold">Web Components</h3>
              <p and-text="p-sm" class="text-muted-foreground">
                24+ accessible components built with StencilJS. Works in React, Angular, Vue, Svelte, or vanilla HTML.
              </p>
            </div>
          </and-card>

          <!-- Feature Card 2 -->
          <and-card
            class="h-full"
            data-and-motion="slide-up"
            data-and-motion-trigger="enter"
            data-and-motion-delay="100ms"
          >
            <div and-layout="vertical gap:sm p:lg">
              <div class="h-12 w-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <and-icon name="layout" size="24"></and-icon>
              </div>
              <h3 and-text="h5 weight:bold">Layout System</h3>
              <p and-text="p-sm" class="text-muted-foreground">
                Attribute-driven CSS layouts with responsive grid, flex, spacing, and typography — no classes needed.
              </p>
            </div>
          </and-card>

          <!-- Feature Card 3 -->
          <and-card
            class="h-full"
            data-and-motion="slide-up"
            data-and-motion-trigger="enter"
            data-and-motion-delay="200ms"
          >
            <div and-layout="vertical gap:sm p:lg">
              <div class="h-12 w-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <and-icon name="activity" size="24"></and-icon>
              </div>
              <h3 and-text="h5 weight:bold">Motion Library</h3>
              <p and-text="p-sm" class="text-muted-foreground">
                Declarative animations via HTML attributes: fade, slide, zoom, bounce, scale — triggered on enter, hover, or tap.
              </p>
            </div>
          </and-card>

          <!-- Feature Card 4 -->
          <and-card
            class="h-full"
            data-and-motion="slide-up"
            data-and-motion-trigger="enter"
            data-and-motion-delay="300ms"
          >
            <div and-layout="vertical gap:sm p:lg">
              <div class="h-12 w-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <and-icon name="star" size="24"></and-icon>
              </div>
              <h3 and-text="h5 weight:bold">Icon Library</h3>
              <p and-text="p-sm" class="text-muted-foreground">
                70+ SVG icons, tree-shakeable, with a global registry. Use individually or register all at once.
              </p>
            </div>
          </and-card>

          <!-- Feature Card 5 -->
          <and-card
            class="h-full"
            data-and-motion="slide-up"
            data-and-motion-trigger="enter"
            data-and-motion-delay="400ms"
          >
            <div and-layout="vertical gap:sm p:lg">
              <div class="h-12 w-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <and-icon name="sliders" size="24"></and-icon>
              </div>
              <h3 and-text="h5 weight:bold">Headless Core</h3>
              <p and-text="p-sm" class="text-muted-foreground">
                Framework-agnostic state machines for accordion, dropdown, modal, tabs, toast, and more.
              </p>
            </div>
          </and-card>

          <!-- Feature Card 6 -->
          <and-card
            class="h-full"
            data-and-motion="slide-up"
            data-and-motion-trigger="enter"
            data-and-motion-delay="500ms"
          >
            <div and-layout="vertical gap:sm p:lg">
              <div class="h-12 w-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <and-icon name="monitor" size="24"></and-icon>
              </div>
              <h3 and-text="h5 weight:bold">Responsive First</h3>
              <p and-text="p-sm" class="text-muted-foreground">
                Every layout attribute supports responsive breakpoints: <code class="text-xs bg-muted px-1 py-0.5 rounded">cols@md:3</code>, <code class="text-xs bg-muted px-1 py-0.5 rounded">gap@lg:xl</code>
              </p>
            </div>
          </and-card>

        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════
         SECTION 3 — SHOWCASE (Live Component Demos)
    ════════════════════════════════════════════════════════ -->
    <section id="showcase">
      <div and-layout="vertical gap:xxl p-y:xxxl p-x:lg" class="max-w-[1200px] mx-auto">

        <!-- Section Header -->
        <div and-layout="vertical align:center gap:sm" data-and-motion="fade-in" data-and-motion-trigger="enter">
          <and-badge variant="outline">Showcase</and-badge>
          <h2 and-text="h2 align:center weight:bold" class="tracking-tight">
            See It In Action
          </h2>
          <p and-text="p align:center" class="text-muted-foreground max-w-[600px]">
            Real components, real interactivity. Everything below is powered by our libraries.
          </p>
        </div>

        <!-- Showcase Row 1: Buttons & Alerts -->
        <div and-layout="grid cols:1 cols@lg:2 gap:xl">

          <!-- Buttons Showcase -->
          <and-card data-and-motion="slide-in-left" data-and-motion-trigger="enter" data-and-motion-duration="700ms">
            <div and-layout="vertical gap:md p:lg">
              <div and-layout="horizontal align:center gap:xs">
                <and-icon name="mouse-pointer" size="18" class="text-primary"></and-icon>
                <h3 and-text="h5 weight:bold">Buttons</h3>
              </div>
              <p and-text="p-sm" class="text-muted-foreground">Multiple variants and sizes with loading states.</p>
              <div and-layout="horizontal gap:sm wrap:wrap align:center">
                <and-button variant="default" size="sm">Default</and-button>
                <and-button variant="secondary" size="sm">Secondary</and-button>
                <and-button variant="outline" size="sm">Outline</and-button>
                <and-button variant="ghost" size="sm">Ghost</and-button>
                <and-button variant="destructive" size="sm">Destructive</and-button>
                <and-button variant="default" size="sm" loading>Loading</and-button>
              </div>
            </div>
          </and-card>

          <!-- Alerts Showcase -->
          <and-card data-and-motion="slide-in-right" data-and-motion-trigger="enter" data-and-motion-duration="700ms">
            <div and-layout="vertical gap:md p:lg">
              <div and-layout="horizontal align:center gap:xs">
                <and-icon name="bell" size="18" class="text-primary"></and-icon>
                <h3 and-text="h5 weight:bold">Alerts</h3>
              </div>
              <p and-text="p-sm" class="text-muted-foreground">Contextual feedback messages for user actions.</p>
              <div and-layout="vertical gap:sm">
                <and-alert variant="default">This is a default informational alert.</and-alert>
                <and-alert variant="destructive">Something went wrong. Please try again.</and-alert>
              </div>
            </div>
          </and-card>
        </div>

        <!-- Showcase Row 2: Accordion & Tabs -->
        <div and-layout="grid cols:1 cols@lg:2 gap:xl">

          <!-- Accordion Showcase -->
          <and-card data-and-motion="slide-in-left" data-and-motion-trigger="enter" data-and-motion-duration="700ms">
            <div and-layout="vertical gap:md p:lg">
              <div and-layout="horizontal align:center gap:xs">
                <and-icon name="list" size="18" class="text-primary"></and-icon>
                <h3 and-text="h5 weight:bold">Accordion</h3>
              </div>
              <p and-text="p-sm" class="text-muted-foreground">Collapsible content sections with smooth animations.</p>
              <and-accordion>
                <and-accordion-item value="item-1">
                  <and-accordion-trigger>Is it accessible?</and-accordion-trigger>
                  <and-accordion-content>
                    Yes. All components follow WAI-ARIA patterns and support keyboard navigation.
                  </and-accordion-content>
                </and-accordion-item>
                <and-accordion-item value="item-2">
                  <and-accordion-trigger>Is it framework agnostic?</and-accordion-trigger>
                  <and-accordion-content>
                    Absolutely. Built with Stencil, our components work as native custom elements in any framework.
                  </and-accordion-content>
                </and-accordion-item>
                <and-accordion-item value="item-3">
                  <and-accordion-trigger>Can I customize it?</and-accordion-trigger>
                  <and-accordion-content>
                    Yes. All components use CSS custom properties and are fully styleable with Tailwind CSS.
                  </and-accordion-content>
                </and-accordion-item>
              </and-accordion>
            </div>
          </and-card>

          <!-- Tabs Showcase -->
          <and-card data-and-motion="slide-in-right" data-and-motion-trigger="enter" data-and-motion-duration="700ms">
            <div and-layout="vertical gap:md p:lg">
              <div and-layout="horizontal align:center gap:xs">
                <and-icon name="panel-top" size="18" class="text-primary"></and-icon>
                <h3 and-text="h5 weight:bold">Tabs</h3>
              </div>
              <p and-text="p-sm" class="text-muted-foreground">Organize content into switchable tabbed panels.</p>
              <and-tabs default-value="overview">
                <and-tabs-list>
                  <and-tabs-trigger value="overview">Overview</and-tabs-trigger>
                  <and-tabs-trigger value="code">Code</and-tabs-trigger>
                  <and-tabs-trigger value="usage">Usage</and-tabs-trigger>
                </and-tabs-list>
                <and-tabs-content value="overview">
                  <div and-layout="vertical gap:xs p:sm">
                    <p and-text="p-sm">A complete set of 24+ web components designed for production use. Framework-agnostic, accessible, and beautifully styled.</p>
                  </div>
                </and-tabs-content>
                <and-tabs-content value="code">
                  <div and-layout="vertical gap:xs p:sm">
                    <code class="text-sm bg-muted p-3 rounded-lg block">&lt;and-button variant="primary"&gt;Click me&lt;/and-button&gt;</code>
                  </div>
                </and-tabs-content>
                <and-tabs-content value="usage">
                  <div and-layout="vertical gap:xs p:sm">
                    <p and-text="p-sm">Import the loader and call <code class="bg-muted px-1 rounded">defineCustomElements()</code>. That's it — use the tags anywhere in your HTML.</p>
                  </div>
                </and-tabs-content>
              </and-tabs>
            </div>
          </and-card>
        </div>

        <!-- Showcase Row 3: Animations & Icons -->
        <div and-layout="grid cols:1 cols@lg:2 gap:xl">

          <!-- Animations demo -->
          <and-card data-and-motion="slide-in-left" data-and-motion-trigger="enter" data-and-motion-duration="700ms">
            <div and-layout="vertical gap:md p:lg">
              <div and-layout="horizontal align:center gap:xs">
                <and-icon name="activity" size="18" class="text-primary"></and-icon>
                <h3 and-text="h5 weight:bold">Animations</h3>
              </div>
              <p and-text="p-sm" class="text-muted-foreground">Hover over the cards below to see motion-core in action.</p>
              <div and-layout="grid cols:2 cols@md:3 gap:sm">
                <div
                  class="bg-muted/50 rounded-lg p-4 text-center cursor-pointer border hover:border-primary transition-colors"
                  data-and-motion="bounce"
                  data-and-motion-trigger="hover"
                >
                  <and-icon name="zap" size="20" class="text-primary mx-auto mb-1"></and-icon>
                  <span and-text="p-xs">Bounce</span>
                </div>
                <div
                  class="bg-muted/50 rounded-lg p-4 text-center cursor-pointer border hover:border-primary transition-colors"
                  data-and-motion="scale-up"
                  data-and-motion-trigger="hover"
                >
                  <and-icon name="maximize" size="20" class="text-primary mx-auto mb-1"></and-icon>
                  <span and-text="p-xs">Scale Up</span>
                </div>
                <div
                  class="bg-muted/50 rounded-lg p-4 text-center cursor-pointer border hover:border-primary transition-colors"
                  data-and-motion="scale-down"
                  data-and-motion-trigger="hover"
                >
                  <and-icon name="minimize" size="20" class="text-primary mx-auto mb-1"></and-icon>
                  <span and-text="p-xs">Scale Down</span>
                </div>
                <div
                  class="bg-muted/50 rounded-lg p-4 text-center cursor-pointer border hover:border-primary transition-colors"
                  data-and-motion="slide-up"
                  data-and-motion-trigger="hover"
                >
                  <and-icon name="arrow-up" size="20" class="text-primary mx-auto mb-1"></and-icon>
                  <span and-text="p-xs">Slide Up</span>
                </div>
                <div
                  class="bg-muted/50 rounded-lg p-4 text-center cursor-pointer border hover:border-primary transition-colors"
                  data-and-motion="slide-in-left"
                  data-and-motion-trigger="hover"
                >
                  <and-icon name="arrow-left" size="20" class="text-primary mx-auto mb-1"></and-icon>
                  <span and-text="p-xs">Slide Left</span>
                </div>
                <div
                  class="bg-muted/50 rounded-lg p-4 text-center cursor-pointer border hover:border-primary transition-colors"
                  data-and-motion="slide-in-right"
                  data-and-motion-trigger="hover"
                >
                  <and-icon name="arrow-right" size="20" class="text-primary mx-auto mb-1"></and-icon>
                  <span and-text="p-xs">Slide Right</span>
                </div>
              </div>
            </div>
          </and-card>

          <!-- Icons demo -->
          <and-card data-and-motion="slide-in-right" data-and-motion-trigger="enter" data-and-motion-duration="700ms">
            <div and-layout="vertical gap:md p:lg">
              <div and-layout="horizontal align:center gap:xs">
                <and-icon name="star" size="18" class="text-primary"></and-icon>
                <h3 and-text="h5 weight:bold">Icon Library</h3>
              </div>
              <p and-text="p-sm" class="text-muted-foreground">70+ crisp SVG icons with customizable size, color, and stroke width.</p>
              <div and-layout="grid cols:4 cols@md:6 gap:sm">
                {["home", "search", "heart", "star", "settings", "user", "bell", "mail", "zap", "code", "terminal", "github", "layers", "compass", "award", "eye", "lock", "edit", "share", "download", "upload", "filter", "monitor", "smartphone"].map((icon) => (
                  <and-tooltip content={icon}>
                    <div class="bg-muted/50 rounded-lg p-3 flex items-center justify-center hover:bg-primary/10 hover:text-primary transition-colors cursor-pointer border hover:border-primary/30">
                      <and-icon name={icon} size="20"></and-icon>
                    </div>
                  </and-tooltip>
                ))}
              </div>
            </div>
          </and-card>
        </div>

        <!-- Showcase Row 4: Layout System demo -->
        <and-card data-and-motion="zoom-in" data-and-motion-trigger="enter" data-and-motion-duration="800ms">
          <div and-layout="vertical gap:lg p:lg">
            <div and-layout="horizontal align:center gap:xs">
              <and-icon name="layout" size="18" class="text-primary"></and-icon>
              <h3 and-text="h5 weight:bold">Layout System — <code class="text-sm bg-muted px-2 py-0.5 rounded">and-layout</code></h3>
            </div>
            <p and-text="p-sm" class="text-muted-foreground">
              Pure attribute-driven layouts — no CSS classes. Supports responsive breakpoints, flex, grid, spacing, and typography.
            </p>

            <!-- Layout code example + visual demo side by side -->
            <div and-layout="grid cols:1 cols@lg:2 gap:lg">
              <!-- Code -->
              <div class="bg-muted rounded-xl p-5 overflow-auto">
                <code class="text-sm leading-relaxed whitespace-pre block text-foreground"><span class="text-muted-foreground">&lt;!-- Responsive Grid --&gt;</span>
&lt;div <span class="text-primary">and-layout</span>="<span class="text-primary">grid cols:1 cols@md:2 cols@lg:3 gap:md</span>"&gt;
  &lt;div&gt;Card 1&lt;/div&gt;
  &lt;div&gt;Card 2&lt;/div&gt;
  &lt;div&gt;Card 3&lt;/div&gt;
&lt;/div&gt;

<span class="text-muted-foreground">&lt;!-- Flex Layout --&gt;</span>
&lt;div <span class="text-primary">and-layout</span>="<span class="text-primary">horizontal align:center justify:between gap:md</span>"&gt;
  &lt;span&gt;Left&lt;/span&gt;
  &lt;span&gt;Right&lt;/span&gt;
&lt;/div&gt;

<span class="text-muted-foreground">&lt;!-- Typography --&gt;</span>
&lt;h2 <span class="text-primary">and-text</span>="<span class="text-primary">h2 weight:bold align:center</span>"&gt;
  Title
&lt;/h2&gt;</code>
              </div>

              <!-- Visual demo -->
              <div and-layout="vertical gap:md">
                <div and-layout="vertical gap:xxs">
                  <span and-text="caption" class="text-muted-foreground uppercase tracking-widest">Responsive Grid</span>
                  <div and-layout="grid cols:3 gap:xs">
                    <div class="bg-primary/10 text-primary text-center rounded-lg p-3 text-sm font-medium border border-primary/20">1</div>
                    <div class="bg-primary/10 text-primary text-center rounded-lg p-3 text-sm font-medium border border-primary/20">2</div>
                    <div class="bg-primary/10 text-primary text-center rounded-lg p-3 text-sm font-medium border border-primary/20">3</div>
                  </div>
                </div>
                <div and-layout="vertical gap:xxs">
                  <span and-text="caption" class="text-muted-foreground uppercase tracking-widest">Flex + Justify Between</span>
                  <div and-layout="horizontal align:center justify:between gap:md" class="bg-secondary/10 rounded-lg p-3 border border-secondary/20">
                    <and-badge variant="secondary">Left</and-badge>
                    <and-badge variant="secondary">Center</and-badge>
                    <and-badge variant="secondary">Right</and-badge>
                  </div>
                </div>
                <div and-layout="vertical gap:xxs">
                  <span and-text="caption" class="text-muted-foreground uppercase tracking-widest">Spacing & Typography</span>
                  <div and-layout="vertical gap:xs p:md" class="bg-accent/10 rounded-lg border border-accent/20">
