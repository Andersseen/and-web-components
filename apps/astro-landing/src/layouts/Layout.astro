---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
import "@andersseen/web-components/dist/web-components/web-components.css";
import "@andersseen/motion/style.css";
import "@andersseen/layout/dist/layout.css";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Andersseen â€” A powerful, framework-agnostic web component ecosystem" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Enable component animations BEFORE web-component registration -->
    <script is:inline>
      window.__AND_ANIMATED__ = true;
    </script>
    <!-- Clear stale hash on fresh page load so the page always starts at Home -->
    <script is:inline>
      if (window.location.hash) {
        history.replaceState(null, '', window.location.pathname);
        window.scrollTo(0, 0);
      }
    </script>
  </head>
  <body class="bg-background text-foreground antialiased min-h-screen font-sans">
    <slot />
    <script>
      import "../scripts/init";
    </script>
  </body>
</html>
