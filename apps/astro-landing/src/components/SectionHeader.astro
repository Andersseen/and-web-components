---
interface Props {
  badge: string;
  title: string;
  description: string;
}

const { badge, title, description } = Astro.props;
---

<div and-layout="vertical align:center gap:sm" data-and-motion="fade-in" data-and-motion-trigger="enter">
  <and-badge variant="outline">{badge}</and-badge>
  <h2 and-text="h2 align:center weight:bold" class="tracking-tight">
    {title}
  </h2>
  <p and-text="p align:center" class="text-muted-foreground max-w-[600px]">
    {description}
  </p>
</div>
