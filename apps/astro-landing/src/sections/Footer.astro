---
const resourceLinks = [
  { href: '#features', label: 'Features' },
  { href: '#showcase', label: 'Showcase' },
  { href: '#ecosystem', label: 'Ecosystem' },
];

const communityLinks = [
  { href: '#', label: 'GitHub', icon: 'github' },
  { href: '#', label: 'Contact', icon: 'mail' },
];
---

<footer class="border-t">
  <div and-layout="vertical gap:xl p-y:xxl p-x:lg" class="max-w-[1200px] mx-auto">

    <!-- Footer top -->
    <div and-layout="grid cols:1 cols@md:3 gap:xl">
      <!-- Brand -->
      <div and-layout="vertical gap:sm">
        <div and-layout="horizontal align:center gap:xs">
          <and-icon name="layers" size="24" class="text-primary"></and-icon>
          <span class="font-bold text-lg">Andersseen</span>
        </div>
        <p and-text="p-sm" class="text-muted-foreground">
          A modern, framework-agnostic web component ecosystem for building beautiful interfaces.
        </p>
      </div>

      <!-- Resource Links -->
      <div and-layout="vertical gap:sm">
        <h5 and-text="p-sm weight:bold" class="uppercase tracking-wider text-muted-foreground">Resources</h5>
        {resourceLinks.map(({ href, label }) => (
          <a href={href} class="text-sm hover:text-primary transition-colors">{label}</a>
        ))}
      </div>

      <!-- Community Links -->
      <div and-layout="vertical gap:sm">
        <h5 and-text="p-sm weight:bold" class="uppercase tracking-wider text-muted-foreground">Community</h5>
        {communityLinks.map(({ href, label, icon }) => (
          <a href={href} class="text-sm hover:text-primary transition-colors inline-flex items-center gap-1">
            <and-icon name={icon} size="14"></and-icon> {label}
          </a>
        ))}
      </div>
    </div>

    <!-- Footer bottom -->
    <div class="border-t pt-6">
      <div and-layout="horizontal align:center justify:between wrap:wrap gap:sm">
        <p and-text="p-xs" class="text-muted-foreground">
          &copy; {new Date().getFullYear()} Andersseen. All rights reserved.
        </p>
        <div and-layout="horizontal gap:md">
          <a href="#" class="text-xs text-muted-foreground hover:text-foreground transition-colors">Privacy Policy</a>
          <a href="#" class="text-xs text-muted-foreground hover:text-foreground transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>

  </div>
</footer>
